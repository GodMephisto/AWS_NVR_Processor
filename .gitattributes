# ============================================================================
# NVR Edge Processing System - Git Attributes Configuration
# ============================================================================
# Handles line endings and file types properly across different operating systems

# Auto detect text files and perform LF normalization
* text=auto

# Python files - always use LF line endings
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pxi text eol=lf

# Shell scripts - always use LF line endings
*.sh text eol=lf
*.bash text eol=lf

# Windows batch files - always use CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files - use LF line endings
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
.env text eol=lf
.env.* text eol=lf

# Documentation files - use LF line endings
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.rtf text eol=lf

# Web files - use LF line endings
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Data files - use LF line endings
*.csv text eol=lf
*.xml text eol=lf
*.sql text eol=lf

# Binary files - do not modify
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Video files - binary
*.mp4 binary
*.avi binary
*.mov binary
*.mkv binary
*.flv binary
*.wmv binary
*.webm binary
*.m4v binary
*.3gp binary

# Image files - binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.bmp binary
*.tiff binary
*.ico binary
*.svg binary

# Audio files - binary
*.mp3 binary
*.wav binary
*.flac binary
*.aac binary

# Certificate and key files - binary
*.pem binary
*.key binary
*.cert binary
*.crt binary
*.p12 binary
*.pfx binary

# Database files - binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Compiled files - binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pyc binary
*.pyo binary
*.pyd binary

# Archive and package files - binary
*.egg binary
*.whl binary
*.deb binary
*.rpm binary
*.msi binary

# Font files - binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary